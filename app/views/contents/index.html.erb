<h1>Listing Contents</h1>

<table>
  <thead>
    <tr>
      <th>Created at</th>
      <th>Update at</th>
      <th>Title</th>
      <th>Description</th>
      <th>Source path</th>
      <th>Download path</th>
      <th>Category</th>
      <th>Sub category</th>
      <th>Role</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.created_at %></td>
        <td><%= content.updated_at %></td>
        <td><%= content.title %></td>
        <td><%= content.description %></td>
        <td><%= content.source_path %></td>
        <td><%= content.download_path %></td>
        <td><%= content.category %></td>
        <td><%= content.sub_category %></td>
        <td><%= content.note %></td>
        <td><%= content.status %></td>
        <td><%= link_to 'Show', content %></td>
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
        <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

